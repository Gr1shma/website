---
interface FavItem {
    name: string;
    url?: string;
    note?: string;
}

const { title, description, items } = Astro.props as {
    title: string;
    description?: string;
    items: FavItem[];
};

const id = title
    .toLowerCase()
    .replace(/[\s/]+/g, "-")
    .replace(/[^a-z0-9-]/g, "");
---

<section
    class="hover:border-accent mb-8 border border-neutral-800 bg-neutral-900/20 p-6 transition-all duration-300 hover:bg-neutral-900/50"
    id={id}
>
    <h2 class="mb-4 text-xl font-bold text-white">
        <a
            href={`#${id}`}
            class="hover:text-accent transition-colors duration-200"
        >
            {title}
        </a>
    </h2>
    {description && <p class="mb-6 text-sm text-gray-400">{description}</p>}
    <ul class="space-y-3">
        {
            items.map((item) => (
                <li class="flex items-start">
                    <span class="mt-2.5 mr-3 h-1.5 w-1.5 shrink-0 rounded-full bg-neutral-600" />
                    <div>
                        <a
                            href={item.url}
                            class="hover:text-accent font-semibold text-gray-200 transition-colors duration-200"
                            target="_blank"
                            rel="noopener"
                        >
                            {item.name}
                        </a>
                        {item.note && (
                            <span class="ml-2 text-sm text-gray-500">
                                // {item.note}
                            </span>
                        )}
                    </div>
                </li>
            ))
        }
    </ul>
</section>
