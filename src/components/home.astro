---
import Header from "../components/header.astro";
import SectionList from "../components/section-list.astro";
import LinkSection from "./link-section.astro";
import BlogList from "./blog-list.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("posts"))
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0, 5);

const projectItems = [
    {
        title: "g7-chat",
        role: "creator",
        description:
            "a fast, minimalist ai chat interface built with full-stack next.js - for power users who value speed, control, and complete ownership.",
        href: "https://g7-chat.vercel.app",
    },
    {
        title: "tube and fuss",
        role: "creator",
        description:
            "a backend system in express.js combining features of youtube and twitter.",
        href: "https://github.com/Gr1shma/tube-and-fuss",
    },
    {
        title: "go-rrsag",
        role: "creator",
        description:
            "a lightweight rss aggregator in go with user accounts, feed follows, and a background scraper.",
        href: "https://github.com/Gr1shma/go-rrsag",
    },
    {
        title: "notgit",
        role: "creator",
        description:
            "a minimal reimplementation of git in go - built to understand how version control systems work under the hood.",
        href: "https://github.com/Gr1shma/notgit",
    },
];
---

<Header />
<LinkSection />
<SectionList
    title="projects"
    items={projectItems}
    viewAllHref="/projects"
    viewAllText="all projects"
/>
<BlogList posts={posts} />
