---
import Header from "../components/header.astro";
import SectionList from "../components/section-list.astro";
import LinkSection from "./link-section.astro";
import BlogList from "./blog-list.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("posts"))
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0, 5);

const projectItems = [
    {
        title: "rawhttp",
        role: "creator",
        description:
            "A lightweight HTTP parser and server built in Rust. It follows RFC-9112 built to understand protocol parsing and TCP networking.",
        href: "https://github.com/Gr1shma/rawhttp",
    },
    {
        title: "notgit",
        role: "creator",
        description:
            "A minimal reimplementation of Git in Go. Built to understand how version control systems work under the hood.",
        href: "https://github.com/Gr1shma/notgit",
    },
    {
        title: "g7-chat",
        role: "creator",
        description:
            "A fast, minimalist AI chat interface built with full-stack Next.js.",
        href: "https://g7-chat.vercel.app",
    },
    {
        title: "tube and fuss",
        role: "creator",
        description:
            "A backend system built in Express.js, combining features of YouTube and Twitter.",
        href: "https://github.com/Gr1shma/tube-and-fuss",
    },
];
---

<Header />
<LinkSection />
<SectionList
    title="projects"
    items={projectItems}
    viewAllHref="/projects"
    viewAllText="all projects"
/>
<BlogList posts={posts} />
