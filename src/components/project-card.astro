---
export interface ProjectCardProps {
    title: string;
    description: string;
    role: string;
    period?: string;
    achievements: string[];
    technologies: string[];
    href: string;
}

const { title, description, role, period, achievements, technologies, href } =
    Astro.props as ProjectCardProps;
---

<div
    class="group hover:border-accent relative h-full border border-neutral-800 bg-neutral-900/20 p-6 transition-all duration-300 hover:bg-neutral-900/50"
>
    <a href={href} target="_blank" rel="noopener noreferrer" class="block">
        <div class="mb-4 flex items-start justify-between">
            <h2
                class="group-hover:text-accent text-2xl font-bold text-white transition-colors duration-200"
            >
                {title}
            </h2>
            <svg
                class="group-hover:text-accent h-6 w-6 text-neutral-500 transition-transform duration-200 group-hover:translate-x-1 group-hover:-translate-y-1"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d="M7 7h10v10"></path>
                <path d="M7 17 17 7"></path>
            </svg>
        </div>
    </a>
    <p
        class="mb-4 text-xs font-medium tracking-wider text-neutral-500 uppercase"
    >
        {role}
        {period && <> &mdash; {period}</>}
    </p>

    <p class="mb-8 text-sm leading-relaxed text-gray-400">{description}</p>

    <div class="space-y-6">
        <div>
            <h3
                class="mb-3 text-sm font-semibold tracking-wider text-white uppercase"
            >
                achievements
            </h3>
            <ul class="space-y-2 text-sm text-gray-400">
                {
                    achievements.map((achievement) => (
                        <li class="flex items-start">
                            <span class="group-hover:bg-accent mt-1.5 mr-2 h-1 w-1 shrink-0 rounded-full bg-neutral-600 transition-colors duration-300" />
                            {achievement}
                        </li>
                    ))
                }
            </ul>
        </div>

        <div>
            <h3
                class="mb-3 text-sm font-semibold tracking-wider text-white uppercase"
            >
                technologies
            </h3>
            <div class="flex flex-wrap gap-2">
                {
                    technologies.map((tech) => (
                        <span class="border border-neutral-800 bg-neutral-900/50 px-2 py-1 text-xs text-gray-400 transition-colors group-hover:border-neutral-700 group-hover:text-gray-300">
                            {tech.toLowerCase()}
                        </span>
                    ))
                }
            </div>
        </div>
    </div>
</div>
